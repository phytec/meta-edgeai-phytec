 			.int_update_delay_frm	= 1,
@@ -626,7 +626,7 @@ static struct vvcam_mode_info_s ar0234_modes[] = {
 			.gain_step		= 1,
 			.start_exposure		= 2 * 1200 * 1024,
 			.cur_fps		= 60 * 1024,
-			.max_fps		= 60 * 1024,
