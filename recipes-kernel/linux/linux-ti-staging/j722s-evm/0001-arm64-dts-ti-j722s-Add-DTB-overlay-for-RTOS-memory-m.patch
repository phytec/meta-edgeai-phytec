+#include "k3-j722s-rtos-memory-map.dtsi"
+
+&main_i2c1 {
+    status = "disabled";
+};
+
+&main_i2c2 {
+    status = "disabled";
+};
+
+&dss1 {
+    status = "disabled";
+};
+
+&ti_csi2rx1 {
+    status = "disabled";
+};
+
+&ti_csi2rx2 {
+    status = "disabled";
+};
+
+&ti_csi2rx3 {
+    status = "disabled";
+};
